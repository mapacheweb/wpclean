{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "color": {
      "palette": [
        { "name": "FG bg",    "slug": "fg-bg",    "color": "#F5F9F9" },
        { "name": "FG ink",   "slug": "fg-ink",   "color": "#234C53" },
        { "name": "FG brand", "slug": "fg-brand", "color": "#86B2BA" },
        { "name": "FG mid",   "slug": "fg-mid",   "color": "#638E94" },

        { "name": "PP bg",    "slug": "pp-bg",    "color": "#FFF5F8" },
        { "name": "PP ink",   "slug": "pp-ink",   "color": "#EAAEBB" },
        { "name": "PP brand", "slug": "pp-brand", "color": "#DDA1B2" },

        { "name": "GL bg",    "slug": "gl-bg",    "color": "#F8F5F1" },
        { "name": "GL ink",   "slug": "gl-ink",   "color": "#736146" },
        { "name": "GL brand", "slug": "gl-brand", "color": "#D9C7AD" },

        { "name": "Gray 200", "slug": "g-200",    "color": "#CCCCCC" },
        { "name": "Gray 300", "slug": "g-300",    "color": "#999999" },
        { "name": "Gray 400", "slug": "g-400",    "color": "#666666" },
        { "name": "Gray 500", "slug": "g-500",    "color": "#333333" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "name": "Sistema",
          "slug": "sistema",
          "fontFamily": "system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,'Helvetica Neue',Arial,sans-serif"
        },
        {
          "name": "EB Garamond",
          "slug": "garamond",
          "fontFamily": "'EB Garamond',serif"
        },
        {
          "name": "Open Sans",
          "slug": "opensans",
          "fontFamily": "'Open Sans',system-ui,-apple-system,Roboto,Arial,sans-serif"
        }
      ],
      "fontSizes": [
        { "slug": "xs", "size": "0.8rem", "name": "XS" },
        { "slug": "sm", "size": "0.9rem", "name": "SM" },
        { "slug": "base", "size": "1rem", "name": "Base" },
        { "slug": "lg", "size": "1.25rem", "name": "LG" },
        { "slug": "xl", "size": "1.75rem", "name": "XL" }
      ],
      "lineHeight": "1.4"
    },
    "spacing": {
      "spacingScale": { "steps": 0, "mediumStep": "0.5rem" }
    },
    "border": { "radius": "12px" }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--fg-bg)",
      "text": "var(--wp--preset--color--fg-ink)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--sistema)"
    },
    "elements": {
      "button": {
        "border": { "radius": "12px" },
        "spacing": {
          "padding": { "top": "0.6rem", "right": "1rem", "bottom": "0.6rem", "left": "1rem" }
        },
        "typography": { "fontWeight": "600" },
        "color": {
          "background": "var(--wp--preset--color--fg-brand)",
          "text": "#fff"
        }
      }
    }
  }
}




